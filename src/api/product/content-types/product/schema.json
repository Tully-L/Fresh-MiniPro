{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "singularName": "product",
    "pluralName": "products",
    "displayName": "Product",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "sku": {
      "type": "string",
      "required": true,
      "unique": true,
      "default": "VG-001-J"
    },
    "productName": {
      "type": "string",
      "required": true
    },
    "productStatus": {
      "type": "enumeration",
      "enum": [
        "online",
        "offline"
      ],
      "default": "online",
      "required": true
    },
    "category": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::category.category",
      "inversedBy": "products"
    },
    "order_item": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::order-item.order-item",
      "inversedBy": "products"
    },
    "unit": {
      "type": "enumeration",
      "enum": [
        "jin",
        "bundles",
        "packages",
        "pieces",
        "units",
        "boxes",
        "sheets",
        "pots"
      ],
      "default": "jin",
      "required": true
    },
    "picture": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "description": {
      "type": "text"
    },
    "alias": {
      "type": "json"
    },
    "variants": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::variant.variant"
    }
  }
}
